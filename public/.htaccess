RewriteEngine On
RewriteRule ([^/]*)/([0-9]+)$ index.php?controller=$1&id=$2%{QUERY_STRING} [NC,L]
RewriteRule ([^/]*)/([^/]*)$ index.php?controller=$1&action=$2%{QUERY_STRING} [NC,L]
RewriteRule ([^/]*)/([^/]*)/([0-9]+)$ index.php?controller=$1&action=$2&id=$3%{QUERY_STRING} [NC,L]
RewriteRule ([^/]*)$ index.php?controller=$1&%{QUERY_STRING} [NC,L]
